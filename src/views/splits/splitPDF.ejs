<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/output.css" rel="stylesheet">
</head>

<body class="min-h-screen bg-gray-50 flex flex-col">

  <!-- Navbar -->
  <header>
    <%- include('../partials/nav') %>
  </header>

  <main class="flex-1 flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-xl bg-white rounded-xl shadow-lg p-8">

      <h2 class="text-3xl font-bold text-center text-gray-800">
        Split PDF
      </h2>
      <p class="text-center text-gray-600 mt-2">
        Split PDF by page range or into equal parts
      </p>

      <!-- Upload Form -->
      <form action="/split/pdf/result" method="POST" enctype="multipart/form-data" class="mt-8">

        <!-- Upload -->
        <label class="block mb-4 text-sm font-medium text-gray-700">
          Upload PDF
        </label>

        <!-- Drag & Drop Upload -->
        <label for="pdf" id="drop-zone"
          class="flex flex-col items-center justify-center w-full h-48 border-2 border-dashed border-gray-300 rounded-xl cursor-pointer bg-gray-50 hover:bg-gray-100 transition">
          <div class="text-center">
            <p class="text-gray-700 font-medium">
              Drag & drop your PDF here
            </p>
            <p class="text-sm text-gray-500 mt-1">
              or click to browse (.pdf only)
            </p>
          </div>

          <input id="pdf" name="pdf" type="file" accept=".pdf" class="hidden" required />
        </label>

        <!-- Selected File Name -->
        <p id="file-name" class="mt-3 text-center text-sm text-gray-600 hidden">
          Selected file: <span class="font-medium"></span>
        </p>

        <!-- Split Mode -->
        <div class="mt-6">
          <p class="font-medium text-gray-700 mb-2">
            Choose split method
          </p>

          <div class="space-y-2">
            <label class="flex items-center gap-2">
              <input type="radio" name="splitMode" value="range" checked>
              <span>Split by page ranges</span>
            </label>

            <label class="flex items-center gap-2">
              <input type="radio" name="splitMode" value="count">
              <span>Split into equal parts</span>
            </label>
          </div>
        </div>

        <!-- Range Input -->
        <div id="rangeInput" class="mt-4">
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Page ranges
          </label>
          <input type="text" name="ranges" placeholder="e.g. 1-3,4-6,7-10" class="w-full border rounded-lg p-2" />
          <p class="text-xs text-gray-500 mt-1">
            Separate ranges with commas
          </p>
        </div>

        <!-- Count Input -->
        <div id="countInput" class="mt-4 hidden">
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Number of parts
          </label>
          <input type="number" name="parts" min="2" class="w-full border rounded-lg p-2" />
        </div>

        <button type="submit"
          class="mt-6 w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
          Split PDF
        </button>

      </form>
    </div>
  </main>

  <script>
    const input = document.getElementById('pdf');
    const dropZone = document.getElementById('drop-zone');
    const fileName = document.getElementById('file-name');
    const fileText = fileName.querySelector('span');

    // Split Mode Toggle Logic
    const radioRange = document.querySelector('input[value="range"]');
    const radioCount = document.querySelector('input[value="count"]');
    const rangeInput = document.getElementById('rangeInput');
    const countInput = document.getElementById('countInput');

    function toggleInputs() {
      if (radioRange.checked) {
        rangeInput.classList.remove('hidden');
        countInput.classList.add('hidden');
        // Remove/Add required attributes to ensure form validity
        document.querySelector('input[name="ranges"]').required = true;
        document.querySelector('input[name="parts"]').required = false;
      } else {
        rangeInput.classList.add('hidden');
        countInput.classList.remove('hidden');
        document.querySelector('input[name="ranges"]').required = false;
        document.querySelector('input[name="parts"]').required = true;
      }
    }

    radioRange.addEventListener('change', toggleInputs);
    radioCount.addEventListener('change', toggleInputs);

    // Initialize state
    toggleInputs();


    input.addEventListener('change', () => {
      if (input.files.length) {
        fileText.textContent = input.files[0].name;
        fileName.classList.remove('hidden');
      }
    });

    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('bg-blue-50', 'border-blue-400');
    });

    dropZone.addEventListener('dragleave', () => {
      dropZone.classList.remove('bg-blue-50', 'border-blue-400');
    });

    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('bg-blue-50', 'border-blue-400');

      if (e.dataTransfer.files.length) {
        input.files = e.dataTransfer.files;
        fileText.textContent = e.dataTransfer.files[0].name;
        fileName.classList.remove('hidden');
      }
    });
  </script>


</body>

</html>